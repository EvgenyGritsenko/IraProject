    RadioGroup1Q5->Items->Add("Edit -> Add Form");

    // Вопрос 6
    Label6->Caption = "6. Как задать заголовок формы?";
    RadioGroup1Q6->Items->Clear();
    RadioGroup1Q6->Items->Add("Caption");
    RadioGroup1Q6->Items->Add("Title");
    RadioGroup1Q6->Items->Add("Header");
    RadioGroup1Q6->Items->Add("Text");

    // Вопрос 7
    Label7->Caption = "7. Что делает метод Show?";
    RadioGroup1Q7->Items->Clear();
    RadioGroup1Q7->Items->Add("Отображает форму");
    RadioGroup1Q7->Items->Add("Закрывает форму");
    RadioGroup1Q7->Items->Add("Прячет форму");
