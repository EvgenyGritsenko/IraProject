//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit4.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm4 *Form4;
//---------------------------------------------------------------------------
__fastcall TForm4::TForm4(TComponent* Owner)
	: TForm(Owner)
{
    SetupTest();
}
//---------------------------------------------------------------------------
void __fastcall TForm4::SetupTest()
{
    // Вопрос 5
	Label1->Caption = "1. Что представляет собой класс TForm?";
	RadioGroup1->Items->Clear();
	RadioGroup1->Items->Add("Компонент для работы с базами данных");
	RadioGroup1->Items->Add("Базовый класс для всех оконных форм в приложениях");
	RadioGroup1->Items->Add("Класс для работы с файлами");

	// Вопрос 1
	Label2->Caption = "2. Что такое TForm?";
	RadioGroup2->Items->Clear();
	RadioGroup2->Items->Add("Класс для создания окон");
	RadioGroup2->Items->Add("Компонент для кнопок");
	RadioGroup2->Items->Add("Компонент для изображений");

	// Вопрос 2
	Label3->Caption = "3. Какой метод закрывает форму?";
	RadioGroup3->Items->Clear();
	RadioGroup3->Items->Add("Close");
	RadioGroup3->Items->Add("Hide");
	RadioGroup3->Items->Add("Show");


	// Вопрос 6
	Label4->Caption = "4. Какой компонент отвечает за создание меню?";
	RadioGroup4->Items->Clear();
	RadioGroup4->Items->Add("TMainMenu");
	RadioGroup4->Items->Add("TPopupMenu");
	RadioGroup4->Items->Add("TMenuItem");

	// Вопрос 4
	Label5->Caption = "5. Какой компонент отображает изображение?";
	RadioGroup5->Items->Clear();
	RadioGroup5->Items->Add("TImage");
	RadioGroup5->Items->Add("TLabel");
	RadioGroup5->Items->Add("TPanel");


    // Вопрос 8
	Label6->Caption = "6. Какой метод завершает работу программы?";
	RadioGroup6->Items->Clear();
	RadioGroup6->Items->Add("Terminate");
	RadioGroup6->Items->Add("Close");
	RadioGroup6->Items->Add("Exit");


    // Вопрос 7
	Label7->Caption = "7. Какой метод делает форму видимой?";
	RadioGroup7->Items->Clear();
	RadioGroup7->Items->Add("Show");
	RadioGroup7->Items->Add("Hide");
	RadioGroup7->Items->Add("Close");

    // Вопрос 9
	Label8->Caption = "8. Какой компонент используется для ввода текста?";
	RadioGroup8->Items->Clear();
	RadioGroup8->Items->Add("TEdit");
	RadioGroup8->Items->Add("TMemo");
	RadioGroup8->Items->Add("TLabel");

    // Вопрос 10
	Label9->Caption = "9. Как изменить цвет фона формы?";
	RadioGroup9->Items->Clear();
	RadioGroup9->Items->Add("Color");
	RadioGroup9->Items->Add("Background");
	RadioGroup9->Items->Add("Brush");

        // Вопрос 3
	Label10->Caption = "10. Какое свойство задает заголовок окна?";
	RadioGroup10->Items->Clear();
	RadioGroup10->Items->Add("Caption");
	RadioGroup10->Items->Add("Title");
	RadioGroup10->Items->Add("Name");

}

// Подсчёт правильных ответов
int __fastcall TForm4::CalculateScore()
{
    int score = 0;

	if (RadioGroup1->ItemIndex == 0) score++;
	if (RadioGroup2->ItemIndex == 0) score++;
	if (RadioGroup3->ItemIndex == 0) score++;
	if (RadioGroup4->ItemIndex == 0) score++;
	if (RadioGroup5->ItemIndex == 0) score++;
	if (RadioGroup6->ItemIndex == 0) score++;
	if (RadioGroup7->ItemIndex == 0) score++;
	if (RadioGroup8->ItemIndex == 0) score++;
	if (RadioGroup9->ItemIndex == 0) score++;
	if (RadioGroup10->ItemIndex == 0) score++;

    return score;
}


void __fastcall TForm4::Button1Click(TObject *Sender)
{
    int score = CalculateScore();
	ShowMessage("Вы набрали " + IntToStr(score) + " из 10 правильных ответов.");
}
