//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit3.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
    SetupTest();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::SetupTest()
{
    // Вопрос 1
    LabelQ1->Caption = "1. Что такое TForm?";
    RadioGroupQ1->Items->Clear();
    RadioGroupQ1->Items->Add("Класс для создания окон");
    RadioGroupQ1->Items->Add("Компонент для кнопок");
    RadioGroupQ1->Items->Add("Компонент для изображений");

    // Вопрос 2
    LabelQ2->Caption = "2. Какой метод закрывает форму?";
    RadioGroupQ2->Items->Clear();
    RadioGroupQ2->Items->Add("Close");
    RadioGroupQ2->Items->Add("Hide");
    RadioGroupQ2->Items->Add("Show");

    // Вопрос 3
    LabelQ3->Caption = "3. Какое свойство задает заголовок окна?";
    RadioGroupQ3->Items->Clear();
    RadioGroupQ3->Items->Add("Caption");
    RadioGroupQ3->Items->Add("Title");
    RadioGroupQ3->Items->Add("Name");

    // Вопрос 4
    LabelQ4->Caption = "4. Какой компонент отображает изображение?";
    RadioGroupQ4->Items->Clear();
    RadioGroupQ4->Items->Add("TImage");
    RadioGroupQ4->Items->Add("TLabel");
    RadioGroupQ4->Items->Add("TPanel");

    // Вопрос 5
    LabelQ5->Caption = "5. Как задать начальную позицию формы?";
    RadioGroupQ5->Items->Clear();
    RadioGroupQ5->Items->Add("Position");
    RadioGroupQ5->Items->Add("Align");
    RadioGroupQ5->Items->Add("Size");

    // Вопрос 6
    LabelQ6->Caption = "6. Какой компонент отвечает за создание меню?";
    RadioGroupQ6->Items->Clear();
    RadioGroupQ6->Items->Add("TMainMenu");
    RadioGroupQ6->Items->Add("TPopupMenu");
    RadioGroupQ6->Items->Add("TMenuItem");

    // Вопрос 7
    LabelQ7->Caption = "7. Какой метод делает форму видимой?";
    RadioGroupQ7->Items->Clear();
    RadioGroupQ7->Items->Add("Show");
    RadioGroupQ7->Items->Add("Hide");
    RadioGroupQ7->Items->Add("Close");

    // Вопрос 8
    LabelQ8->Caption = "8. Какой метод завершает работу программы?";
    RadioGroupQ8->Items->Clear();
    RadioGroupQ8->Items->Add("Terminate");
    RadioGroupQ8->Items->Add("Close");
    RadioGroupQ8->Items->Add("Exit");

    // Вопрос 9
    LabelQ9->Caption = "9. Какой компонент используется для ввода текста?";
    RadioGroupQ9->Items->Clear();
    RadioGroupQ9->Items->Add("TEdit");
    RadioGroupQ9->Items->Add("TMemo");
    RadioGroupQ9->Items->Add("TLabel");

    // Вопрос 10
    LabelQ10->Caption = "10. Как изменить цвет фона формы?";
    RadioGroupQ10->Items->Clear();
    RadioGroupQ10->Items->Add("Color");
    RadioGroupQ10->Items->Add("Background");
    RadioGroupQ10->Items->Add("Brush");
}

// Подсчёт правильных ответов
int __fastcall TForm1::CalculateScore()
{
    int score = 0;

    if (RadioGroupQ1->ItemIndex == 0) score++;  // Верный ответ на 1-й вопрос
    if (RadioGroupQ2->ItemIndex == 0) score++;  // Верный ответ на 2-й вопрос
    if (RadioGroupQ3->ItemIndex == 0) score++;  // Верный ответ на 3-й вопрос
    if (RadioGroupQ4->ItemIndex == 0) score++;  // Верный ответ на 4-й вопрос
    if (RadioGroupQ5->ItemIndex == 0) score++;  // Верный ответ на 5-й вопрос
    if (RadioGroupQ6->ItemIndex == 0) score++;  // Верный ответ на 6-й вопрос
    if (RadioGroupQ7->ItemIndex == 0) score++;  // Верный ответ на 7-й вопрос
    if (RadioGroupQ8->ItemIndex == 0) score++;  // Верный ответ на 8-й вопрос
    if (RadioGroupQ9->ItemIndex == 0) score++;  // Верный ответ на 9-й вопрос
    if (RadioGroupQ10->ItemIndex == 0) score++; // Верный ответ на 10-й вопрос

    return score;
}


void __fastcall TForm3::Button1Click(TObject *Sender)
{
    int score = CalculateScore();
	ShowMessage("Вы набрали " + IntToStr(score) + " из 10 правильных ответов.");
}
