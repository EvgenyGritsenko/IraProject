//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit5.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm5 *Form5;
//---------------------------------------------------------------------------
__fastcall TForm5::TForm5(TComponent* Owner)
	: TForm(Owner)
{
	SetupTest();
}
//---------------------------------------------------------------------------
void __fastcall TForm4::SetupTest()
{

	Label1->Caption = "1. Какой метод класса TForm используется для скрытия формы без ее уничтожения?";
	RadioGroup1->Items->Clear();
	RadioGroup1->Items->Add("Close");
	RadioGroup1->Items->Add("Hide");
	RadioGroup1->Items->Add("Minimize");


	Label2->Caption = "2. Какое свойство отвечает за цвет фона формы?";
	RadioGroup2->Items->Clear();
	RadioGroup2->Items->Add("BackgroundColor");
	RadioGroup2->Items->Add("Color");
	RadioGroup2->Items->Add("BackColor");


	Label3->Caption = "3. Какой метод следует использовать, чтобы задать форму как главное окно приложения?";
	RadioGroup3->Items->Clear();
	RadioGroup3->Items->Add("SetMainForm");
	RadioGroup3->Items->Add("SetPrimaryForm");
	RadioGroup3->Items->Add("Application->MainForm");



	Label4->Caption = "4.Какое значение свойства BorderStyle позволяет сделать окно формы полностью изменяемым?";
	RadioGroup4->Items->Clear();
	RadioGroup4->Items->Add("bsNone");
	RadioGroup4->Items->Add(" bsDialog");
	RadioGroup4->Items->Add("bsSizeable");


	Label5->Caption = "5. Что произойдет при установке свойства FormStyle в fsStayOnTop?";
	RadioGroup5->Items->Clear();
	RadioGroup5->Items->Add(" Форма всегда будет поверх других окон");
	RadioGroup5->Items->Add("Форма свернется в трей");
	RadioGroup5->Items->Add("Форма станет модальной");



	Label6->Caption = "6. Какой метод класса TForm используется для программного изменения ширины и высоты формы?";
	RadioGroup6->Items->Clear();
	RadioGroup6->Items->Add("Resize");
	RadioGroup6->Items->Add("SetBounds");
	RadioGroup6->Items->Add("AdjustWindow");



	Label7->Caption = "7.Какое событие вызывается при создании формы?";
	RadioGroup7->Items->Clear();
	RadioGroup7->Items->Add("OnCreate");
	RadioGroup7->Items->Add("OnActivate");
	RadioGroup7->Items->Add("OnShow");


	Label8->Caption = "8. Какой компонент можно использовать для добавления меню в форму?";
	RadioGroup8->Items->Clear();
	RadioGroup8->Items->Add("TMainMenu");
	RadioGroup8->Items->Add("TMenuStrip");
	RadioGroup8->Items->Add("TMenu");


	Label9->Caption = "9. Что произойдет, если свойству BorderStyle формы присвоить значение bsNone?";
	RadioGroup9->Items->Clear();
	RadioGroup9->Items->Add("Окно станет полноэкранным");
	RadioGroup9->Items->Add("Окно не будет иметь границ и заголовка");
	RadioGroup9->Items->Add("Окно закроется автоматически");


	Label10->Caption = "10. Какое событие вызывается при изменении размеров формы?";
	RadioGroup10->Items->Clear();
	RadioGroup10->Items->Add("OnResize");
	RadioGroup10->Items->Add("OnChangeSize");
	RadioGroup10->Items->Add("OnWidthHeightChange");

}

// Подсчёт правильных ответов
int __fastcall TForm4::CalculateScore()
{
    int score = 0;

	if (RadioGroup1->ItemIndex == 1) score++;
	if (RadioGroup2->ItemIndex == 0) score++;
	if (RadioGroup3->ItemIndex == 1) score++;
	if (RadioGroup4->ItemIndex == 1) score++;
	if (RadioGroup5->ItemIndex == 1) score++;
	if (RadioGroup6->ItemIndex == 0) score++;
	if (RadioGroup7->ItemIndex == 1) score++;
	if (RadioGroup8->ItemIndex == 0) score++;
	if (RadioGroup9->ItemIndex == 1) score++;
	if (RadioGroup10->ItemIndex == 0) score++;

    return score;
}


void __fastcall TForm4::Button1Click(TObject *Sender)
{
    int score = CalculateScore();
	ShowMessage("Вы набрали " + IntToStr(score) + " из 10 правильных ответов.");
}
